{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-global-import": "off",
    "custom-errors": "off",
    "no-empty-blocks": "off",
    "avoid-throw": false,
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "func-name-mixedcase": false,
    "compiler-version": [
      "error",
      "^0.8.0"
    ],
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ],
    "not-rely-on-time": false,
    "var-name-mixedcase": false
  }
}